<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ArtworkDetailFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_detail_artwork_id"
            android:layout_width="match_parent"
            android:layout_height="476dp"
            android:src="@drawable/loading_harvard" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:gravity="right"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="24dp"
            android:id="@+id/image_share_id"
            android:src="@drawable/icon_share_black"
            />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/image_favorito_id"
                android:layout_marginRight="8dp"
                android:src="@drawable/icon_favorito"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/title_detail_artwork_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TITLE"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="16dp"
            android:layout_margin="4dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/text_title_detail_artwork_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ram head mug depicting a symposium"
            android:textAlignment="center"
            android:textSize="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/classification_detail_artwork_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CLASSIFICATION"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="16dp"
            android:layout_margin="4dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/text_classification_detail_artwork_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vessels"
            android:textAlignment="center"
            android:textSize="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/date_detail_artwork_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DATE"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="16dp"
            android:layout_margin="4dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/text_date_detail_artwork_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="480-470 BCE"
            android:textAlignment="center"
            android:textSize="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/period_detail_artwork_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PERIOD"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="16dp"
            android:layout_margin="4dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/text_period_detail_artwork_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Classical period, Early"
            android:textAlignment="center"
            android:textSize="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/culture_detail_artwork_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CULTURE"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="16dp"
            android:layout_margin="4dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/text_culture_detail_artwork_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Greek"
            android:textAlignment="center"
            android:textSize="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"
            />

    </LinearLayout>
    </android.support.v7.widget.CardView>
</ScrollView>