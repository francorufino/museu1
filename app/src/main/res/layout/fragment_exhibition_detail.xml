<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"
    card_view:cardElevation="8dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/titulo_detailExhibition_id"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="Title not available"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.532"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Venue's Address:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titulo_detailExhibition_id" />

        <ImageView
            android:id="@+id/btn_add_to_my_calendar_id"
            android:layout_width="91dp"
            android:layout_height="37dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/icon_calendar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_api_localizacao_id" />

        <TextView
            android:id="@+id/text_view_titulo_date_begin_id"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="From:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_api_localizacao_id" />


        <TextView
            android:id="@+id/text_view_titulo_date_end_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="To:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_titulo_date_begin_id" />

        <TextView
            android:id="@+id/text_view_api_localizacao_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Location not available"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/titulo_detailExhibition_id" />


        <TextView
            android:id="@+id/text_view_api_data_end_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="End date not available"
            app:layout_constraintStart_toEndOf="@+id/text_view_titulo_date_end_id"
            app:layout_constraintTop_toBottomOf="@+id/text_view_titulo_date_begin_id" />


        <TextView
            android:id="@+id/text_view_api_data_begin_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Begin date not available"
            app:layout_constraintStart_toEndOf="@+id/text_view_titulo_date_begin_id"
            app:layout_constraintTop_toBottomOf="@+id/text_view_api_localizacao_id" />

        <TextView
            android:id="@+id/text_add_to_myCalendar_id"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginEnd="4dp"
            android:text="Click to add to calendar"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_add_to_my_calendar_id" />

        <View
            android:id="@+id/line01"
            app:layout_constraintTop_toBottomOf="@+id/text_add_to_myCalendar_id"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            android:focusable="false" />


        <TextView
            android:id="@+id/text_view_titulo_descricao"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:paddingTop="3dp"
            android:text="Exhibition Description"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_add_to_myCalendar_id" />


        <View
            android:id="@+id/line02"
            app:layout_constraintTop_toBottomOf="@+id/text_view_titulo_descricao"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            android:focusable="false" />

        <View
            android:id="@+id/line03"
            app:layout_constraintTop_toBottomOf="@+id/line02"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            android:focusable="false" />

        <View
            android:id="@+id/line04"
            app:layout_constraintTop_toBottomOf="@+id/line03"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:focusable="false" />

        <View
            android:id="@+id/line05"
            app:layout_constraintTop_toBottomOf="@+id/line04"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            android:focusable="false" />

        <View
            android:id="@+id/line06"
            app:layout_constraintTop_toBottomOf="@+id/line05"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            android:focusable="false" />

        <View
            android:id="@+id/line07"
            app:layout_constraintTop_toBottomOf="@+id/line06"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            android:focusable="false" />

        <View
            android:id="@+id/line08"
            app:layout_constraintTop_toBottomOf="@+id/line07"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            android:focusable="false" />

        <View
            android:id="@+id/line09"
            app:layout_constraintTop_toBottomOf="@+id/line08"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            android:focusable="false" />

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/scrollView2"
            android:layout_marginTop="8dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line09">

            <TextView
                android:id="@+id/descrition_detailex_id"
                android:text="Description not available"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </ScrollView>



        <!--<WebView-->
            <!--android:id="@+id/web_view_exibition_item_id"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_marginStart="8dp"-->
            <!--android:layout_marginLeft="8dp"-->
            <!--android:layout_marginTop="8dp"-->
            <!--android:layout_marginEnd="8dp"-->
            <!--android:layout_marginRight="8dp"-->
            <!--android:layout_marginBottom="8dp"-->
            <!--app:layout_constraintBottom_toBottomOf="parent"-->
            <!--app:layout_constraintEnd_toEndOf="parent"-->
            <!--app:layout_constraintStart_toStartOf="parent"/>-->

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>