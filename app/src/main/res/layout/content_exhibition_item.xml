        <TextView
            android:id="@+id/textView_dateExhibition_id"
            android:layout_width="117dp"
            android:layout_height="27dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            android:gravity="left"
            android:text="Begin date:"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/end_date"
            app:layout_constraintEnd_toStartOf="@+id/begin_date_set"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_nameExhibition_id" />

        <TextView
            android:id="@+id/end_date"
            android:layout_width="117dp"
            android:layout_height="27dp"

            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            android:gravity="left"
            android:text="End date:"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_dateExhibition_id" />

        <TextView
            android:id="@+id/begin_date_set"
            android:layout_width="117dp"
            android:layout_height="27dp"
            android:layout_marginStart="48dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="16dp"
            android:gravity="left"
            android:text="date:"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/textView_dateExhibition_id"
            app:layout_constraintTop_toBottomOf="@+id/textView_nameExhibition_id" />

        <TextView
            android:id="@+id/end_date_set"
            android:layout_width="117dp"
            android:layout_height="27dp"
            android:layout_marginStart="48dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="16dp"
            android:gravity="left"
            android:text="date:"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/end_date"
            app:layout_constraintTop_toBottomOf="@+id/begin_date_set" />

        <Button
            android:id="@+id/btn_ver_mais_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="See More"
            android:textSize="10dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:textColor="@color/branco"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/end_date" />

